<div id="adding-recipe-form">
  <%= form_for user_recipes_path(@user) do |f| %>
    <%= f.label :category %>
    <%= f.text_field :category %><br />
    <%= f.label :title %>
    <%= f.text_field :title %><br />
    <%= f.label :notes %>
    <%= f.text_field :notes %><br />
    <%= f.label "public" %>
    <%= f.radio_button :public_private, false %>
    <%= f.label "private" %>
    <%= f.radio_button :public_private, true %>
    <%= f.submit "Open Recipe" %>
  <% end %>
</div>