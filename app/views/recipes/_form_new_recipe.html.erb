<%= form_for [@user, @recipe] do |f| %>
  <%= f.label "Category: " %>
  <%= f.text_field :category %><br />
  <%= f.label "Title: " %>
  <%= f.text_field :title %><br /><br />
  <%= f.fields_for :ingredients do |builder| %>
  <%= render "ingredient_fields", f: builder %>
  <% end %><br />
  <%= f.fields_for :steps do |builder| %>
  <%= render "step_fields", f: builder %>
  <% end %>
  <%= f.label "Notes: "%>
  <%= f.text_area :notes, rows:"3", cols: "40" %><br />
  <%= f.submit "Create Recipe" %>
<% end %>