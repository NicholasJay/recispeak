<div class="user-page-container">
  <div class="middle-container">
    <div class="center-titles">
      <button id='start-reading' class='user-menu-buttons-input'>Begin</button>
      <form action="<%= user_recipes_path(@user.id) %>" method="post" >
        <input name='authenticity_token' type='hidden' value='<%= form_authenticity_token %>' />
        <label>Enter a title to save this Recipe</label><br />
        <input type="title" name="title" class="saving-recipe" /><br />
 

        <input type="submit" value="Save Recipe To Recispeak" class="user-menu-buttons-input" /><br />
      </form>
    </div>
      <div class="recipe-information">
        <div class="page-left-recipe-container-url">
          <h2>Ingredients</h2><br />
        <ul>
          <li><%= @message_ingredient %></li>
          <% @ingredients.zip(@amounts).each do |item, amount| %>
          <li><%= amount %> <%= item %><li>
          <% end %>
        </ul>
      </div>
        <div class="page-right-recipe-container-url">
          <h2>Directions</h2><br />
        <ul>
          <li><%= @message_direction %></li>
          <% @directions.each do |direction| %>
          <li><%= direction %><li><br />
          <% end %>
        </ul>
        </div>
      </div>
  </div>
</div>

<script>
  Recispeak.steps = <%= raw @directions %>;
</script>

<%= javascript_include_tag "speech", "data-turbolinks-track" => true %>